{
  "name": "fiberforge",
  "version": "1.0.1",
  "description": "A TypeScript library for image processing and manipulation",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dumok001/fiber-forge.git"
  },
  "homepage": "https://github.com/dumok001/fiber-forge#readme",
  "bugs": {
    "url": "https://github.com/dumok001/fiber-forge/issues"
  },
  "keywords": [
    "image",
    "processing",
    "typescript",
    "sharp",
    "png"
  ],
  "author": "dumok001",
  "license": "MIT",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build"
  },
  "dependencies": {
    "pngjs": "^7.0.0",
    "sharp": "^0.34.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^24.3.0",
    "@types/sharp": "^0.32.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
