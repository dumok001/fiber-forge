{
  "preset": "ts-jest/presets/default-esm",
  "testEnvironment": "node",
  "extensionsToTreatAsEsm": [
    ".ts"
  ],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "transform": {
    "^.+\\.ts$": [
      "ts-jest",
      {
        "useESM": true
      }
    ]
  },
  "testMatch": [
    "**/tests/**/*.test.ts"
  ],
  "collectCoverageFrom": [
    "utils/**/*.ts",
    "index.ts",
    "!**/*.d.ts",
    "!**/node_modules/**",
    "!tests/**"
  ],
  "setupFilesAfterEnv": [
    "<rootDir>/tests/setup.ts"
  ],
  "testTimeout": 30000
}
